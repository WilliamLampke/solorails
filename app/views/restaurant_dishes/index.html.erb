<h1>Dishes from this Restaurant: </h1>
<%=link_to "Add Dish", "/restaurants/#{@restaurant.id}/restaurant_dishes/new", method: :get %>
<%=link_to "Sort Alphabetically", "/restaurants/#{@restaurant.id}/restaurant_moredishes", method: :get %>
<%= form_tag "/restaurants/#{@restaurant.id}/restaurant_dishes", method: :get do%>
    <p><%= label_tag :number, "Sort by Number: " %>
    <%= text_field_tag :number, params[:number] %></p>
    <%= submit_tag "Submit" %>
<% end %>

<% @dishes.each do |dish|%>
    <p><%= dish.name %></p>
    <p><%= dish.available %></p>
    <p><%= dish.price %></p>
    <p><%= dish.restaurant_id %></p>
    <%=link_to "Edit Dish #{dish.id}", "/restaurants/#{@restaurant.id}/restaurant_dishes/#{dish.id}/edit", method: :get %>

<% end %>